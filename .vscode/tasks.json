{
    "version": "2.0.0",
    "tasks": [
      {
        // step-1: 生成(或重新生成) build-debug
        "label": "CMake configure (Debug)",
        "type": "shell",
        "command": "cmake",
        "args": [
          "-S", "${workspaceFolder}",
          "-B", "${workspaceFolder}/build-debug",
          "-DCMAKE_BUILD_TYPE=Debug",
          "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"   // 供 clangd / IntelliSense
        ],
        "problemMatcher": []
      },
      {
        // step-2: 编译  (⌘/Ctrl+Shift+B 将默认执行这个)
        "label": "CMake build (Debug)",
        "type": "shell",
        "command": "cmake",
        "args": [
          "--build", "${workspaceFolder}/build-debug",
          "--config", "Debug",
          "-j", "8"                              // 并行编译线程数，可按需调整
        ],
        "dependsOn": "CMake configure (Debug)",
        "group": { "kind": "build", "isDefault": true },
        "problemMatcher": ["$gcc"]
      }
    ]
  }
  